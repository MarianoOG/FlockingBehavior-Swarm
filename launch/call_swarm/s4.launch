<?xml version="1.0"?>
<!-- Four quadrotors, gazebo, desired trajectory, controller -->

<launch>

	<!-- Initial positions (editable) -->
	<arg name="x0" default="0"/>
	<arg name="y0" default="-1"/>
	<arg name="x1" default="0"/>
	<arg name="y1" default="1"/>
	<arg name="x2" default="-1"/>
	<arg name="y2" default="0"/>
	<arg name="x3" default="1"/>
	<arg name="y3" default="0"/>

	<!-- Spawn quadrotors in positions -->
	<include file="$(find swarm)/launch/call_quad.launch">
		<arg name="name" value="uav0"/>
		<arg name="x" value="$(arg x0)"/>
		<arg name="y" value="$(arg y0)"/>
	</include>
	<include file="$(find swarm)/launch/call_quad.launch">
		<arg name="name" value="uav1"/>
		<arg name="x" value="$(arg x1)"/>
		<arg name="y" value="$(arg y1)"/>
	</include>
	<include file="$(find swarm)/launch/call_quad.launch">
		<arg name="name" value="uav2"/>
		<arg name="x" value="$(arg x2)"/>
		<arg name="y" value="$(arg y2)"/>
	</include>
	<include file="$(find swarm)/launch/call_quad.launch">
		<arg name="name" value="uav3"/>
		<arg name="x" value="$(arg x3)"/>
		<arg name="y" value="$(arg y3)"/>
	</include>

	<!-- Export positions as parameters -->
	<group ns="uav0">
		<param name="x" value="(arg x0)"/>
		<param name="y" value="(arg y0)"/>
	</group>
	<group ns="uav1">
		<param name="x" value="(arg x1)"/>
		<param name="y" value="(arg y1)"/>
	</group>
	<group ns="uav2">
		<param name="x" value="(arg x2)"/>
		<param name="y" value="(arg y2)"/>
	</group>
	<group ns="uav3">
		<param name="x" value="(arg x3)"/>
		<param name="y" value="(arg y3)"/>
	</group>

</launch>
