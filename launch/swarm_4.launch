<?xml version="1.0"?>
<!-- Four quadrotors, gazebo, desired trajectory, controller -->

<launch>
	
	<!-- Start Gazebo with wg world running in (max) realtime-->
	<include file="$(find gazebo_ros)/launch/empty_world.launch"/>

	<!-- Spawn quadrotors -->
	<include file="$(find swarm)/launch/call_quad.launch">
		<arg name="name" value="uav0"/>
		<arg name="y" value="-1.0"/>
	</include>
	<include file="$(find swarm)/launch/call_quad.launch">
		<arg name="name" value="uav1"/>
		<arg name="y" value="1.0"/>
	</include>
	<include file="$(find swarm)/launch/call_quad.launch">
		<arg name="name" value="uav2"/>
		<arg name="x" value="-1.0"/>
	</include>
	<include file="$(find swarm)/launch/call_quad.launch">
		<arg name="name" value="uav3"/>
		<arg name="x" value="1.0"/>
	</include>

	<!-- Desired trayectory -->
	<!-- <node pkg="swarm" type="S4_go_up_and_stay.py" name="S4_up_and_stay"/> -->
	<node pkg="swarm" type="S4_go_up_and_circle.py" name="S4_up_and_circle"/>

</launch>
